<h1>Products and Services</h1>

<table class="table">
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Type</th>
    <th>Price</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @products.each do |product| %>
  <tr>
    <td><%= product.name %></td>
    <td><%= product.description %></td>
    <td><%= product.product_type %></td>
    <td><%= sprintf("P%0.02f", product.price) %></td>
    <td><div class="btn-group">
    <%= link_to 'Show', product, class: "btn btn-mini btn-primary" %>
    <%= link_to 'Edit', edit_product_path(product), class: "btn btn-mini" %>
    <%= link_to 'Delete', product, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-mini btn-danger" %></td>
    </div>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Product', new_product_path, class: "btn" %>
